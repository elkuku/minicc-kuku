{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Transactions{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
    {% include('_breadcrumbs.html.twig') %}
    {% endif %}

    <div class="float-end btn-group">
        <a href="{{ path('store-transaction-pdf', {'id': store.id, 'year': year}) }}"
           class="btn btn-outline-success" title="Export">
            <span class="oi oi-file"></span>
        </a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('stores-edit', {'id': store.id}) }}" class="btn btn-outline-warning" title="Edit Local">
                <span class="oi oi-pencil"></span>
            </a>
            {% if store.id > 1 %}
                <a title="Local anterior" href="{{ path('store-transactions', {'id': store.id - 1}) }}"
                   class="btn btn-outline-primary">
                    <span class="oi oi-chevron-left"></span>
                </a>
            {% else %}
                <div title="Este es el primer local" class="btn btn-disabled">
                    <span class="oi oi-chevron-left"></span>
                </div>
            {% endif %}
            {% if store.id < stores|length %}
                <a title="Local siguiente" href="{{ path('store-transactions', {'id': store.id + 1}) }}"
                   class="btn btn-outline-primary">
                    <span class="oi oi-chevron-right"></span>
                </a>
            {% else %}
                <div title="Este es el ultimo local" class="btn btn-disabled">
                    <span class="oi oi-chevron-right"></span>
                </div>
            {% endif %}
        {% endif %}
    </div>

    <h2>Transacciones</h2>

    <h4>Local {{ store.id }} - {{ store.destination }} - {{ store.user ? store.user.name : 'Desocupado' }}</h4>

    <form method="post">
        <table class="table table-sm table-hover">
            <thead>
            <tr>
                <th>Fecha
                    <select name="year" onchange="form.submit()">
                        {% for y in "now"|date("Y")..2005 %}
                            <option{{ y == year ? ' selected="selected"' : '' }}>{{ y }}</option>
                        {% endfor %}
                    </select>
                </th>
                {% if is_granted('ROLE_ADMIN') %}
                <th>Inquilino</th>
                {% endif %}
                <th>Detalle</th>
                <th class="text-end">Monto</th>
                <th class="text-end">Saldo</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th class="text-center">Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            <tr class="table-primary">
                <td>{{ intlDate(year~'-01-01', 'MMMM d') }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                <td></td>
                {% endif %}
                <td>Saldo Anterior</td>
                {% if saldoAnterior %}
                    <td class="text-end">{{ saldoAnterior|price|raw }}</td>
                    <td class="text-end">{{ saldoAnterior|price|raw }}</td>
                {% else %}
                    <td colspan="2"></td>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <td></td>
                {% endif %}
            </tr>
            {% set saldo = saldoAnterior %}
            {% for transaction in transactions %}
                {% set saldo = saldo + transaction.amount %}
                {% if transaction.type.name == 'Ajuste' %}
                    {% set style = ' class="table-warning"' %}
                {% elseif transaction.type.name == 'Alquiler' %}
                    {% set style = ' class="table-success"' %}
                {% else %}
                    {% set style = '' %}
                {% endif %}
                {% if is_granted('ROLE_ADMIN') or transaction.user == app.user %}
                    <tr{{ style|raw }}>
                        <td>{{ intlDate(transaction.date, 'MMMM d') }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ transaction.user.name|short_name }}</td>
                {% endif %}
                        <td>{{ transaction.type.name }}</td>
                        <td class="text-end">{{ transaction.amount|price|raw }}</td>
                        <td class="text-end">{{ saldo|price|raw }}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td>
                                <a href="{{ path('transaction-edit', {'id': transaction.id, 'view': 'stores/'~store.id}) }}">Edit</a>
                                <a href="{{ path('transaction-delete', {'id': transaction.id, 'view': 'stores/'~store.id}) }}">Delete</a>
                            </td>
                        {% endif %}
                    </tr>
                {% endif %}
            {% else %}
                <tr>
                    <td colspan="6" class="alert-warning text-center">No Transactions found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </form>

    {{ render_chart(chart, {'height': 75}) }}
{% endblock %}
