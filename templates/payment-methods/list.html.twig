{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Payment methods{% endblock %}

{% block body %}
    <div class="float-right">
        <a href="{{ path('payment-methods-new') }}" class="btn btn-info">Nuevo</a>
    </div>

    <h1>Payment methods</h1>

    <table class="table table-sm table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for method in paymentMethods %}
            <tr>
                <td>{{ method.id }}</td>
                <td>{{ method.name }}</td>
                <td>
                    <a href="{{ path('payment-methods-edit', {'id': method.id}) }}">Edit</a>
                    <a href="{{ path('payment-methods-delete', {'id': method.id}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No Methods Defined!!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
