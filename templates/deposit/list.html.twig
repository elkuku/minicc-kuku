{% extends 'base.html.twig' %}

{% import '_paginator-elements.html.twig' as paginator %}

{% block title %} {{ parent() }} - Depositos{% endblock %}

{% block body %}

    <div class="float-right">
            <a class="btn btn-light" data-toggle="collapse" href="#collapseExample" role="button">
                CSV Upload
            </a>
        <div class="collapse" id="collapseExample">
                {% include('deposit/_csvupload.html.twig') %}
        </div>
    </div>

    <h1>Depositos</h1>


    <form method="post">

        <div class="row">
            <div class="col-xs-2">{{ paginator.listLimit(paginatorOptions) }}</div>
            <div class="col-xs-10">{{ paginator.pagination(paginatorOptions) }}</div>
        </div>

        <table class="table table-sm table-hover">
            <thead>

            <tr>
                <th></th>
                <th></th>
                <th style="white-space: nowrap">
                    De {{ paginator.date('date_from', paginatorOptions) }}<br/>
                    A {{ paginator.date('date_to', paginatorOptions) }}
                </th>
                <th></th>
                <th style="white-space: nowrap">
                    {{ paginator.criteria('document', paginatorOptions) }}<br/>

                </th>
                <th style="white-space: nowrap">
                    {{ paginator.criteria('amount', paginatorOptions) }}<br/>

                </th>
                <th></th>
            </tr>
            <tr>
                <th>{{ paginator.ordering('id', paginatorOptions) }}</th>
                <th></th>
                <th>{{ paginator.ordering('date', paginatorOptions) }}</th>
                <th></th>
                <th>                    {{ paginator.ordering('document', paginatorOptions) }}<br/>
                </th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>Id</th>
                <th>Tr Id</th>
                <th>Fecha</th>
                <th>Entity</th>
                <th>Document</th>
                <th>Amount</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for d in deposits %}
                {% set deposit = d[0] %}
                <tr>
                    <td>{{ deposit.id }}</td>
                    <td>{{ d['tr_id'] }}</td>
                    <td>{{ deposit.date|date('Y-m-d') }}</td>
                    <td style="white-space: nowrap">{{ deposit.entity.name }}</td>
                    <td>{{ deposit.document }}</td>
                    <td>{{ deposit.amount }}</td>
                    <td>
                        <a href="{{ path('payment-methods-delete', {'id': deposit.id}) }}">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="alert-warning text-center">No hay depositos que mostrar!</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ paginator.formFields(paginatorOptions) }}

    </form>

{% endblock %}
