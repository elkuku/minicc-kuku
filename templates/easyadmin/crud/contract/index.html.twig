{% extends '@EasyAdmin/crud/index.html.twig' %}

{% block global_actions %}
    <div class="global-actions">
        <a class="btn btn-info" data-toggle="collapse" href="#collapseExample" role="button">Nuevo</a>
    </div>

    <div class="collapse" id="collapseExample">
        <form action="{{ global_actions[0].linkUrl }}" method="post" class="form-inline es-edit-form">
            <div class="form-widget">
                <select required="required" class="form-select form-control-sm" name="store">
                    <option value="">Local ...</option>
                    {% for store in stores %}
                        <option value="{{ store.id }}">{{ store.id }} - {{ store.destination }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-widget">
                <select required="required" class="form-select form-control-sm" name="user">
                    <option value="">Usuario ...</option>
                    {% for user in users %}
                        <option value="{{ user.id }}">{{ user.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <button class="btn btn-success" type="submit">Crear</button>
        </form>
    </div>
{% endblock global_actions %}
