{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Pay Day{% endblock %}

{% block body %}

    <h1>Pay Day</h1>

    <div {{ stimulus_controller('payday', { lastRecipeNo: lastRecipeNo, paymentMethods: paymentMethodsString }) }}>

        <button data-action="payday#addPayment" class="btn btn-primary">
            Add Payment
        </button>

        {{ include('admin/payday/template.html.twig') }}

        <form method="post">

            <div data-payday-target="body"></div>

            <div class="text-end">
                <button type="submit" class="btn btn-outline-success">A Cobrar</button>
            </div>

        </form>

        {{ include('admin/payday/modal.html.twig') }}

    </div>
{% endblock %}
