{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Pay Day{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var payday = new PayDay();
    </script>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-xs-4">
            <h3>Pay Day</h3>
        </div>
        <div class="col-xs-8" id="messageContainer">
        </div>
    </div>

    <form method="post" action="{{ path('pay-day') }}">
        <table id="paymentsTable">
            <thead>
            <tr>
                <th>Fecha</th>
                <th>Local</th>
                <th>Forma</th>
                <th>Documento</th>
                <th>Factura</th>
                <th>Monto</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    <input name="payments[date_cobro][]" type="text" class="js-datepicker" size="9">
                </td>
                <td>
                    <select name="payments[store][]">
                        <option>Local</option>
                        {% for store in stores %}
                            <option value="{{ store.id }}">
                                {{ store.id }}
                                - {{ store.destination }}
                                - {{ store.user.name|short_name }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                    <select name="payments[method][]">
                        {% for method in paymentMethods %}
                            <option value="{{ method.id }}">{{ method.name }}</option>
                        {% endfor %}
                    </select>
                </td>
                <td>
                    <input name="payments[document][]" type="text" size="7">
                    <span class="btn btn-default btn-xs" onclick="payday.searchDepId($(this), '{{ path('lookup-depo') }}')">&rArr;</span>
                    <input name="payments[depId][]" type="text" size="7">
                </td>
                <td>
                    <input name="payments[recipe][]" type="text" size="7">
                </td>
                <td>
                    <input name="payments[amount][]" type="text" size="7">
                </td>
                <td>
                    <a class="btn btn-xs btn-info" onclick="payday.addRow(this)">ADD</a>
                </td>
            </tr>
            </tbody>
        </table>

        <div class="well">
            <button type="submit" class="btn btn-success">A Cobrar</button>
        </div>

    </form>
{% endblock %}
