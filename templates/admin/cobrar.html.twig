{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Cobrar alquileres{% endblock %}

{% block body %}
    <h1>Cobrar Alquileres</h1>
    {% if stores is empty %}
        <div class="alert alert-danger">No stores defined</div>
    {% else %}
        <form method="post" action="{{ path('cobrar') }}">
            <table class="table table-bordered table-sm table-hover">
                <thead>
                <tr>
                    <th class="text-center">Local</th>
                    <th>Destino</th>
                    <th>Inquilino</th>
                    <th>Monto</th>
                </tr>
                </thead>

                <tbody>
                {% for store in stores %}

                    <tr>
                        <td class="text-center">{{ store.id }}</td>
                        <td>{{ store.destination }}</td>
                        <td>{{ store.user.name|short_name }}</td>
                        <td>
                            <input type="hidden" name="users[{{ store.id }}]"
                                   value="{{ store.user ? store.user.id : 0 }}"/>
                            <input class="form-control" type="text" name="values[{{ store.id }}]" value="{{ store.valAlq|conIva|round(2) }}" size="7"
                                   maxlength="7">
                        </td>
                    </tr>

                {% endfor %}
                </tbody>

                <tfoot>
                <tr>
                    <td>
                        <label for="date_cobro">Fecha de Cobro</label>
                    </td>
                    <td>
                        <input name="date_cobro" id="date_cobro" type="date" class="form-control"
                               required="required"/>
                    </td>
                    <td colspan="2">
                        <button type="submit" class="btn btn-success">A Cobrar...</button>
                    </td>
                </tr>
                </tfoot>
            </table>
        </form>
    {% endif %}
{% endblock %}
