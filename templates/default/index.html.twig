{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% if not app.user %}
        {{ encore_entry_script_tags('js/default/index') }}
    {% endif %}
{% endblock %}

{% block body %}
    {% if app.user %}
        {% if is_granted('ROLE_ADMIN') %}
            {% include'default/_admin-dashboard.html.twig' %}
        {% else %}
            {% include'default/_user-dashboard.html.twig' %}
        {% endif %}
    {% endif %}
{% endblock %}
