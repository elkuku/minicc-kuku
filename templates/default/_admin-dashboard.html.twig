    {% if chargementRequired %}
        <div class="alert alert-warning">
            Hay que <a href="{{ path('cobrar') }}">cobrar los alquileres</a>...
        </div>
    {% endif %}
{% endif %}
<div class="btn-group btn-group-lg">
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('cobrar') }}" class="btn btn-outline-success" title="Cobrar alquileres">
            <span class="oi oi-home"></span>
        </a>
        <a href="{{ path('pay-day') }}" class="btn btn-outline-success" title="Ingresar Pagos">
            <span class="oi oi-dollar"></span>
        </a>
    {% endif %}
    <a href="{{ path('pagos-por-ano') }}" class="btn btn-outline-success" title="Pagos por aÃ±o">
        <span class="oi oi-document"></span>
    </a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('planillas-mail') }}" class="btn btn-outline-primary" title="Mail Planillas">
            <span class="oi oi-envelope-closed"></span>
        </a>
    {% endif %}
</div>
{% set theyOweYou = 0 %}
<table class="table table-sm table-hover">
    <thead>
    <tr>
        <th class="text-center">Local</th>
        <th>Destino</th>
        <th>Cliente</th>
        <th class="text-end">Saldo</th>
        <th class="text-center">Meses</th>
    </tr>
    </thead>
    <tbody>
    {% for balance in balances %}
        {% if balance.store.user %}
            {% set mesesDebt = balance.amount / balance.store.valAlq|conIva %}
            <tr class="position-relative">
                <td class="text-center"><span class="badge bg-info text-dark">{{ balance.store.id }}</span></td>
                <td>
                    <a href="{{ path('store-transactions', {'id': balance.store.id}) }}"
                       class="stretched-link text-decoration-none">
                        {{ balance.store.destination }}
                    </a>
                </td>
                <td>{{ balance.store.user.name|short_name }}</td>
                <td class="text-end">{{ balance.amount|price|raw }}</td>
                <td class="text-center">{{ mesesDebt|invert|round(1, 'ceil') }}</td>
            </tr>
            {% set theyOweYou = theyOweYou + balance.amount %}
        {% endif %}
    {% endfor %}
    </tbody>
</table>
<div class="card-footer">
    <h3 class="text-end">Sie schulden dir: $ {{ theyOweYou|price|raw }}</h3>
</div>
<div class="row">
    <div class="col">
        {{ render_chart(chartBalances) }}
    </div>
    <div class="col">
        {{ render_chart(chartMonthsDebt) }}
    </div>
</div>
