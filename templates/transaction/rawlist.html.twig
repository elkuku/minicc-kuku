{% extends 'base.html.twig' %}

{% import '_paginator-elements.html.twig' as paginator %}

{% block title %} {{ parent() }} - Edit Transaction{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/js/paginator.js') }}"></script>
{% endblock %}

{% block body %}

    <h1>RAW List Transactions</h1>

    <form method="post">

        <div class="row">
            <div class="col-xs-2">{{ paginator.listLimit(paginatorOptions) }}</div>
            <div class="col-xs-10">{{ paginator.pagination(paginatorOptions) }}</div>
        </div>

        <table class="table table-sm table-hover">
            <thead>
            <tr>
                <th></th>
                <th{{ paginatorOptions.searchCriteria('store') ? ' class="cell-active"' : '' }}>
                    <select name="paginatorOptions[criteria][store]" class="form-control paginatorResetChange">
                        <option value="0">...</option>
                        {% for store in stores %}
                            <option value="{{ store.id }}"
                                    {{ paginatorOptions.searchCriteria('store') == store.id ? ' selected="selected"' : '' }}>
                                {{ store.id }}
                            </option>
                        {% endfor %}
                    </select>
                </th>
                <th{{ paginatorOptions.searchCriteria('date_from') or paginatorOptions.searchCriteria('date_to') ? ' class="cell-active"' : '' }}>
                    <div class="text-right">
                        From {{ paginator.date('date_from', paginatorOptions) }}
                        <br/>
                        To {{ paginator.date('date_to', paginatorOptions) }}
                        <br/><!-- don't remove.. -->
                    </div>

                </th>
                <th{{ paginatorOptions.searchCriteria('type') ? ' class="cell-active"' : '' }}>
                    <select name="paginatorOptions[criteria][type]" class="form-control paginatorResetChange">
                        <option value="0">...</option>
                        {% for type in transactionTypes %}
                            <option value="{{ type.id }}"
                                    {{ paginatorOptions.searchCriteria('type') == type.id ? ' selected="selected"' : '' }}>
                                {{ type.name }}
                            </option>
                        {% endfor %}
                    </select>
                </th>
                <th{{ paginatorOptions.searchCriteria('amount') ? ' class="cell-active"' : '' }}>
                    <br/>
                    {{ paginator.criteria('amount', paginatorOptions) }}
                </th>
                <th></th>
            </tr>
            <tr>
                <th>{{ paginator.ordering('id', paginatorOptions) }}</th>
                <th></th>
                <th>{{ paginator.ordering('date', paginatorOptions) }}</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>Id</th>
                <th>Local</th>
                <th>Fecha</th>
                <th>Type</th>
                <th>Monto</th>
                <th>Action</th>
            </tr>
            </thead>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.id }}</td>
                    <td>{{ transaction.store.id }}</td>
                    <td>{{ intlDate(transaction.date) }}</td>
                    <td>{{ transaction.type.name }}</td>
                    <td class="text-right">{{ transaction.amount }}</td>
                    <td>
                        <a href="{{ path('transaction-edit', {'id': transaction.id, 'view': 'transaction-rawlist'}) }}">Edit</a>
                        <a href="{{ path('transaction-delete', {'id': transaction.id, 'view': 'transaction-rawlist'}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </table>

        {{ paginator.formFields(paginatorOptions) }}

    </form>

{% endblock %}
